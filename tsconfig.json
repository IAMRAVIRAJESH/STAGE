{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"]
    }
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}